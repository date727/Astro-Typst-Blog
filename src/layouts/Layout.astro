---
import '@fontsource/jetbrains-mono';
---

<!doctype html>
<html lang="zh-cn">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title><slot name="title" /></title>
		<style>
			body {
				margin: 0;
				background-color: #fafaf0;
				font-family: 'JetBrains Mono', monospace;
			}
			/* 字体加载完成前隐藏内容 */
            .font-loading {
                visibility: hidden;
            }
            /* 字体加载完成后显示内容并添加平滑动画 */
			.font-loaded {
				visibility: visible;
				animation: smoothFade 0.3s ease-in-out;
			}
            @keyframes smoothFade {
                from { 
                    opacity: 0;
                }
                to { 
                    opacity: 1;
                }
            }
			nav {
				padding: 1.5rem 1rem;
				max-width: 800px;
				margin: 0 auto;
				text-align: right;
				border-bottom: 1px solid rgb(0, 128, 128);
			}
			nav a {
				margin-right: 1rem;
				text-decoration: none;
				font-weight: bold;
				color: #333;
			}
			main {
				padding: 2rem;
				max-width: 800px;
				margin: 0 auto;
			}
		</style>
	</head>
	<body class="font-loading">
		<script>
			// 检测字体加载完成
			(function() {
				setTimeout(function() {
					const bodyElement = document.body;
					if (bodyElement) {
						bodyElement.classList.remove('font-loading');
						bodyElement.classList.add('font-loaded');
					}
				}, 0);
			})();
		</script>
		<nav>
			<a href="/">Home</a>
			<a href="/about/">About</a>
			<a href="/blog/">Blog</a>
			<a href="/comments">Comment</a>
		</nav>
		<main>
			<slot />
		</main>
	</body>
</html>
