---
import '@fontsource/jetbrains-mono';
---

<!doctype html>
<html lang="zh-cn">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title><slot name="title" /></title>
		<style>
			body {
				margin: 0;
				background-color: #fafaf0;
				font-family: 'JetBrains Mono', monospace;
			}
			/* 字体加载完成前隐藏内容 */
            .font-loading {
                visibility: hidden;
            }
            /* 字体加载完成后显示内容并添加平滑动画 */
            .font-loaded {
                visibility: visible;
                animation: smoothFade 0.3s ease-in-out;
            }
            @keyframes smoothFade {
                from { 
                    opacity: 0;
                }
                to { 
                    opacity: 1;
                }
            }
			nav {
				padding: 1.5rem 1rem;
				max-width: 800px;
				margin: 0 auto;
				text-align: right;
				border-bottom: 1px solid rgb(0, 128, 128);
			}
			nav a {
				margin-right: 1rem;
				text-decoration: none;
				font-weight: bold;
				color: #333;
			}

			main {
				padding: 2rem;
				max-width: 800px;
				margin: 0 auto;
			}
		</style>
	</head>
	<body class="font-loading">
		<script>
			// 检测字体加载完成
			(function() {
				// 创建一个使用JetBrains Mono字体的元素
				const testElement = document.createElement('span');
				testElement.style.fontFamily = 'JetBrains Mono';
				testElement.style.position = 'absolute';
				testElement.style.visibility = 'hidden';
				testElement.textContent = 'test';
				
				document.body.appendChild(testElement);
				
				// 检查字体是否已加载
				function checkFontLoaded() {
					// 使用FontFace API检测字体加载状态
					if (document.fonts) {
						// 检查JetBrains Mono字体是否加载完成
						document.fonts.load('16px JetBrains Mono').then(function() {
							// 字体加载完成后，移除font-loading类并添加font-loaded类
							document.body.classList.remove('font-loading');
							document.body.classList.add('font-loaded');
						});
					} else {
						// 如果浏览器不支持FontFace API，设置一个延迟后显示内容
						setTimeout(function() {
							document.body.classList.remove('font-loading');
							document.body.classList.add('font-loaded');
						}, 100);
					}
				}
				
				// 执行检查
				checkFontLoaded();
			})();
		</script>
		<nav>
			<a href="/">Home</a>
			<a href="/about/">About</a>
			<a href="/blog/">Blog</a>
			<a href="/comments">Comment</a>
		</nav>
		<main>
			<slot />
		</main>
	</body>
</html>
