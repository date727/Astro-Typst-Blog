---
import '../styles/global.css'
import '@fontsource/roboto-mono/400.css';
import robotoMonoWoff2 from '@fontsource/roboto-mono/files/roboto-mono-latin-400-normal.woff2?url';
import robotoMonoWoff from '@fontsource/roboto-mono/files/roboto-mono-latin-400-normal.woff?url';
---    

<!doctype html>
<html lang="zh-cn">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title><slot name="title" /></title>
		
		<!-- 预加载Roboto Mono字体 -->
		<link rel="preload" href={robotoMonoWoff2} as="font" type="font/woff2" crossorigin="anonymous" />
		<link rel="preload" href={robotoMonoWoff} as="font" type="font/woff" crossorigin="anonymous" />
	</head>
	<body class="m-0 bg-[#fafaf0] font-mono font-normal">
		<nav class="px-4 py-6 max-w-2xl mx-auto text-right border-b border-teal-600 relative z-10">
			<a href="/" class="mr-4 no-underline font-bold text-gray-800 hover:text-teal-600 transition-colors duration-200">Home</a>
			<a href="/about/" class="mr-4 no-underline font-bold text-gray-800 hover:text-teal-600 transition-colors duration-200">About</a>
			<a href="/blog/" class="mr-4 no-underline font-bold text-gray-800 hover:text-teal-600 transition-colors duration-200">Blog</a>
			<a href="/comments" class="no-underline font-bold text-gray-800 hover:text-teal-600 transition-colors duration-200">Comment</a>
		</nav>
		
		<main class="px-8 py-8 max-w-2xl mx-auto font-mono">
			<slot />
		</main>
	</body>
</html>